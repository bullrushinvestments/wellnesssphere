import type { BuildCommand, EnvVariables, HeaderRule, SecurityHeaders } from './types'; // Assuming custom types are defined in a separate file

interface DeployConfig {
  build: BuildCommand;
  env: EnvVariables;
  redirects?: Array<{source: string; destination: string; status: number}>;
  headers?: Array<HeaderRule>;
  securityHeaders?: SecurityHeaders;
  cachingStrategies?: Record<string, any>; // Custom caching strategies if needed
}

interface BuildCommand {
  command: string;
  output: string;
}

interface EnvVariables extends Record<string, string> {}

interface HeaderRule {
  source: string;
  headers: Array<{key: string; value: string}>;
}

interface SecurityHeaders {
  always?: boolean;
  rules?: Array<{
    source: string;
    headers: Array<{key: string; value: string}>
  }>;
}

const deployConfig: DeployConfig = {
  build: {
    command: 'next build && next export',
    output: '.out'
  },
  env: {
    NEXT_PUBLIC_API_URL: process.env.NEXT_PUBLIC_API_URL,
    NEXT_PUBLIC_STRIPE_KEY: process.env.NEXT_PUBLIC_STRIPE_KEY
  },
  redirects: [
    {source: '/old-url', destination: '/new-url', status: 301}
  ],
  headers: [
    {
      source: '/',
      headers: [
        {key: 'Strict-Transport-Security', value: 'max-age=63072000; includeSubDomains; preload'},
        {key: 'X-Frame-Options', value: 'DENY'}
      ]
    }
  ],
  securityHeaders: {
    always: true,
    rules: [
      {
        source: '/',
        headers: [
          {key: 'Content-Security-Policy', value: "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self'; frame-ancestors 'none'; form-action 'self'; base-uri 'self'; object-src 'none'; media-src 'self';"}
        ]
      }
    ]
  },
  cachingStrategies: {
    // Custom caching strategies can be defined here
  }
};

export default deployConfig;

